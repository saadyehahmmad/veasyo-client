{
  "name": "waiter-pc-agent",
  "version": "1.0.0",
  "description": "PC Agent bridge service for Waiter - connects cloud app to local printers via TCP",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "cli": "ts-node src/cli/index.ts",
    "install-service": "npm run build && node dist/scripts/install-service.js",
    "uninstall-service": "npm run build && node dist/scripts/uninstall-service.js"
  },
  "keywords": [
    "printer",
    "escpos",
    "bridge",
    "agent"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-windows": "^1.0.0-beta.8",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  }
}

